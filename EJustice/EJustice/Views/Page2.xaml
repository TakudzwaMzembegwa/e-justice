<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EJustice.Views.Page2"
             Title="eJustice Case Update">
    <ContentPage.Content>
        <StackLayout Padding="5,10">

            <Editor      x:Name="caseEditor" BackgroundColor="#ff97d3ff"  VerticalOptions="FillAndExpand" />

            <StackLayout Orientation="Horizontal" VerticalOptions="End">

                <Button Text="Clear" Clicked="btnclear" HorizontalOptions="StartAndExpand" BackgroundColor="#ff123ff4" />
                <Button Text="Done" Clicked="btndone" HorizontalOptions="EndAndExpand" BackgroundColor="#ff123ff4"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
